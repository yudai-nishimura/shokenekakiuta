<div class="hero min-h-screen bg-base-200">
  <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
    <div class="card-body">
      <%= form_with url: login_path, class: "form-control" do |f| %>
        <div class="form-control">
          <%= f.label :email, class: "label" do %>
            <span class="label-text"><%= User.human_attribute_name(:email) %></span>
          <% end %>
          <%= f.email_field :email, placeholder: "email", class: "input input-bordered" %>
        </div>
        <div class="form-control">
          <%= f.label :password, class: "label" do %>
            <span class="label-text"><%= User.human_attribute_name(:password) %></span>
          <% end %>
          <%= f.password_field :password, placeholder: "password", class: "input input-bordered" %>
        </div>
        <div class="form-control mt-6">
          <%= f.submit t('defaults.login') ,class: "btn btn-primary" %>
        </div>
        <label class="label">
          <%= link_to t('.to_register_page'), signup_path, class: "label-text-alt link link-hover" %>
        </label>
      <% end %>
    </div>
  </div>
</div>
