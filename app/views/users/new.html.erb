<div class="hero min-h-screen bg-base-200">
  <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
    <div class="card-body">
      <%= form_with(model: @user, class: "form-control") do |f| %>
        <div class="form-control">
          <%= f.label :name, class: "label" do %>
            <span class="label-text">ユーザー名</span>
          <% end %>
          <%= f.text_field :name, placeholder: "name", class: "input input-bordered" %>
        </div>
        <div class="form-control">
          <%= f.label :email, class: "label" do %>
            <span class="label-text">メールアドレス</span>
          <% end %>
          <%= f.email_field :email, placeholder: "email", class: "input input-bordered" %>
        </div>
        <div class="form-control">
          <%= f.label :password, class: "label" do %>
            <span class="label-text">パスワード</span>
          <% end %>
          <%= f.password_field :password, placeholder: "password", class: "input input-bordered" %>
        </div>
        <div class="form-control">
          <%= f.label :password_confirmation, class: "label" do %>
            <span class="label-text">パスワード確認</span>
          <% end %>
          <%= f.password_field :password_confirmation, class: "input input-bordered" %>
        </div>
        <div class="form-control mt-6">
          <%= f.submit class: "btn btn-primary" %>
        </div>
        <label class="label">
          <%= link_to '既にアカウントをお持ちの方はこちら', "#", class: "label-text-alt link link-hover" %>
        </label>
      <% end %>
    </div>
  </div>
</div>
